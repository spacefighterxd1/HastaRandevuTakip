@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // TC Kimlik No sadece rakam
        document.querySelector('input[name="TCKimlikNo"]')?.addEventListener('input', function(e) {
            this.value = this.value.replace(/[^0-9]/g, '');
            if (this.value.length > 11) {
                this.value = this.value.slice(0, 11);
            }
        });

        // Form validation
        (function() {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function(form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        // Minimum tarih kontrolÃ¼ (bugÃ¼nden Ã¶nceki tarihler seÃ§ilemez)
        var tarihInput = document.querySelector('input[type="datetime-local"]');
        if (tarihInput) {
            var now = new Date();
            now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
            tarihInput.min = now.toISOString().slice(0, 16);
        }
    </script>
}

