                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">ğŸ“‹ RandevularÄ±m</h3>
                </div>
                <div class="card-body">
                    @if (hasta == null)
                    {
                        <form asp-action="Randevularim" method="post" class="needs-validation" novalidate>
                            <div class="mb-4">
                                <h5>RandevularÄ±nÄ±zÄ± gÃ¶rmek iÃ§in TC Kimlik No giriniz</h5>
                                <div class="row">
                                    <div class="col-md-8">
                                        <input type="text" name="tcKimlikNo" class="form-control form-control-lg" 
                                               placeholder="TC Kimlik No (11 haneli)" maxlength="11" required />
                                        <span class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <button type="submit" class="btn btn-primary btn-lg w-100">
                                            ğŸ” Sorgula
