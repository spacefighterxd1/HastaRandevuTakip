                                <strong>TC Kimlik No:</strong> @hasta.TCKimlikNo<br>
                                <strong>Telefon:</strong> @hasta.Telefon
                            </p>
                        </div>

                        <div class="mb-3">
                            <a asp-action="Randevularim" asp-route-tcKimlikNo="@tcKimlikNo" class="btn btn-outline-primary">
                                ğŸ”„ Yeniden Sorgula
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary">Yeni Randevu Al</a>
                        </div>

                        @if (Model != null && Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Randevu No</th>
                                            <th>Doktor</th>
                                            <th>Poliklinik</th>
                                            <th>Randevu Tarihi</th>
                                            <th>RahatsÄ±zlÄ±k</th>
                                            <th>Durum</th>
                                            <th class="text-end">Ä°ÅŸlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var randevu in Model)
                                        {
                                            <tr>
                                                <td><strong>#@randevu.Id</strong></td>
                                                <td>
                                                    <strong>@(randevu.Doktor?.AdSoyad ?? randevu.DoktorAdi ?? "-")</strong>
                                                </td>
                                                <td>@(randevu.Poliklinik ?? "-")</td>
                                                <td>
                                                    <strong>@randevu.RandevuTarihi.ToString("dd.MM.yyyy")</strong><br>
                                                    <small class="text-muted">@randevu.RandevuTarihi.ToString("HH:mm")</small>
                                                </td>
                                                <td>
                                                    <small>@(randevu.Rahatsizlik?.Length > 30 ? randevu.Rahatsizlik.Substring(0, 30) + "..." : randevu.Rahatsizlik ?? "-")</small>
                                                </td>
                                                <td>
                                                    @switch (randevu.Durum)
                                                    {
                                                        case RandevuDurumu.Bekliyor:
                                                            <span class="badge bg-warning">Bekliyor</span>
                                                            break;
                                                        case RandevuDurumu.Onaylandi:
                                                            <span class="badge bg-success">OnaylandÄ±</span>
                                                            break;
                                                        case RandevuDurumu.IptalEdildi:
                                                            <span class="badge bg-danger">Ä°ptal Edildi</span>
                                                            break;
                                                        case RandevuDurumu.Tamamlandi:
                                                            <span class="badge bg-info">TamamlandÄ±</span>
                                                            break;
                                                    }
                                                </td>
                                                <td class="text-end">
                                                    @if (randevu.Durum == RandevuDurumu.Bekliyor || randevu.Durum == RandevuDurumu.Onaylandi)
                                                    {
                                                        <form asp-action="RandevuIptal" method="post" class="d-inline" 
                                                              onsubmit="return confirm('Bu randevuyu iptal etmek istediÄŸinizden emin misiniz?');">
                                                            <input type="hidden" name="id" value="@randevu.Id" />
                                                            <input type="hidden" name="tcKimlikNo" value="@tcKimlikNo" />
                                                            <button type="submit" class="btn btn-sm btn-danger">
                                                                âŒ Ä°ptal Et
                                                            </button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning text-center">
                                <h5>HenÃ¼z randevunuz bulunmamaktadÄ±r.</h5>
                                <a asp-action="Index" class="btn btn-primary mt-2">Yeni Randevu Al</a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // TC Kimlik No sadece rakam
        document.querySelector('input[name="tcKimlikNo"]')?.addEventListener('input', function(e) {
            this.value = this.value.replace(/[^0-9]/g, '');
            if (this.value.length > 11) {
                this.value = this.value.slice(0, 11);
            }
        });

        // Form validation
        (function() {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function(form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}

